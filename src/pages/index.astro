---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allPosts = await getCollection('blog');

// Build-time today string for marking future posts
const buildDate = new Date().toISOString().slice(0, 10); // 'YYYY-MM-DD'

// Collect all tags sorted by frequency (from ALL posts ‚Äî future posts have tags too)
const tagCount = new Map<string, number>();
allPosts.forEach(p => p.data.tags?.forEach(t => tagCount.set(t, (tagCount.get(t) ?? 0) + 1)));
const allTags = [...tagCount.entries()].sort((a, b) => b[1] - a[1]).map(([t]) => t);

const posts = allPosts.sort((a, b) => {
  const da = a.data.date ?? '1970-01-01';
  const db = b.data.date ?? '1970-01-01';
  const dateCmp = db.localeCompare(da);
  if (dateCmp !== 0) return dateCmp;
  // Same date: EN before KO
  const la = a.data.lang ?? 'en';
  const lb = b.data.lang ?? 'en';
  if (la === lb) return 0;
  return la === 'en' ? -1 : 1;
});

function formatDate(d?: string) {
  if (!d) return '';
  return new Date(d).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
}

// Use the WP slug as href ‚Äî already lowercase percent-encoded, so browser sends exact bytes
// matching the dist/%ec.../index.html files directly (no case mismatch)
function postHref(post: typeof posts[0]) {
  const wpSlug = post.data.wpSlug ?? post.slug;
  return '/' + wpSlug + '/';
}
---

<Layout title="Joseph Bae" description="Faith ¬∑ Culture ¬∑ Life ‚Äî by Joseph Bae.">
  <div class="home-hero">
    <img src="/assets/restore-britain-hero.jpg" alt="Restore Britain" class="hero-img" />
    <div class="hero-text">
      <h1>A Personal Blog</h1>
      <p>Faith ¬∑ Culture ¬∑ Life ¬∑ Maranatha üï¶Ô∏è</p>
    </div>
  </div>

  <div class="lang-filter">
    <button class="lang-btn active" onclick="filterLang('all',this)">All</button>
    <button class="lang-btn" onclick="filterLang('en',this)">English</button>
    <button class="lang-btn" onclick="filterLang('ko',this)">ÌïúÍµ≠Ïñ¥</button>
  </div>

  {allTags.length > 0 && (
    <div class="tag-browse">
      {allTags.map(tag => (
        <a href={`/tag/${tag}`} class="tag-pill-sm">#{tag}</a>
      ))}
    </div>
  )}

  <div class="post-list" id="post-list">
    {posts.map(post => {
      const isFuture = (post.data.date ?? '1970-01-01') > buildDate;
      return (
        <a
          href={postHref(post)}
          class="post-item"
          data-lang={post.data.lang ?? 'en'}
          data-future={isFuture ? 'true' : 'false'}
          style={isFuture ? 'display:none' : undefined}
        >
          <span class="post-date">{formatDate(post.data.date)}</span>
          <span class="post-title">{post.data.title}</span>
          <span class="post-lang-badge">{(post.data.lang ?? 'en').toUpperCase()}</span>
        </a>
      );
    })}
  </div>
</Layout>

<script>
  const STORAGE_KEY = 'baejoseph_preview_mode';
  let activeLang = 'all';

  function isPreview(): boolean {
    try { return localStorage.getItem(STORAGE_KEY) === 'true'; } catch { return false; }
  }

  function updatePostVisibility() {
    const preview = isPreview();
    document.querySelectorAll<HTMLElement>('.post-item').forEach(el => {
      const langMatch = activeLang === 'all' || el.dataset.lang === activeLang;
      const isFuture = el.dataset.future === 'true';
      el.style.display = langMatch && (!isFuture || preview) ? 'flex' : 'none';
    });
  }

  function filterLang(lang: string, btn: HTMLElement) {
    document.querySelectorAll('.lang-btn').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');
    activeLang = lang;
    updatePostVisibility();
  }
  (window as any).filterLang = filterLang;

  // Re-run when Layout.astro fires the previewModeChanged event
  document.addEventListener('previewModeChanged', () => updatePostVisibility());

  // Apply on initial load (in case preview mode is already active from a previous visit)
  document.addEventListener('DOMContentLoaded', updatePostVisibility);
</script>

